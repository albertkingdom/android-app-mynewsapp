<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/widget_item_stock_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="stockName"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/widget_item_stock_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="stockNo"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:text="stockNo" />
    </LinearLayout>

    <TextView
        android:id="@+id/widget_item_stock_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="stockPrice"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/widget_item_stock_diff"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="stockDiff"
        android:textColor="@color/white" />
</LinearLayout>